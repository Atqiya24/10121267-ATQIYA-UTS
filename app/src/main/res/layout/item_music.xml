<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dimen16"
    android:layout_marginRight="@dimen/dimen16"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen10"
        android:background="@color/greyblue">

        <ImageView
            android:id="@+id/iv_music"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_music2" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/iv_music"
            android:fontFamily="@font/retroica"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/font16" />

        <TextView
            android:id="@+id/tv_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_music"
            android:fontFamily="@font/retroica"
            android:text="Penyanyi"
            android:textColor="@color/white"
            android:textSize="@dimen/font14" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>